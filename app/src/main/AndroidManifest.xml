<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se3a04.anifind">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".GuiController"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivitiesLogic.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".ActivitiesLogic.HomeActivity2"
            android:label="@string/title_activity_home2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivitiesLogic.QuestionActivity2"
            android:label="@string/title_activity_question2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivitiesLogic.ResultActivity2"
            android:label="@string/title_activity_result_2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivitiesLogic.AudioActivity2"
            android:label="@string/title_activity_audio2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivitiesLogic.AnimalFactsActivity"
            android:label="@string/title_activity_animal_facts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivitiesLogic.ErrorReportActivity"
            android:label="@string/title_activity_error_report"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
